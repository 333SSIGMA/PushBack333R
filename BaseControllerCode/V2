robos::Drive Drive({-18,-17, -19}, {15,14, 13},  
11, 3.25, 1, 480);

robos::Intake Intake({50, 51});

robos::Motor bottom(3);
robos::Motor top(20);
//robos::Motor liftThing2(-1);
//int liftPosition = 0;
//int pos1 = 450;
//int pos2 = 650;
//double target = 0;

pros::adi::Pneumatics unloader(21, false);

pros::adi::Pneumatics descore(20, false);

pros::adi::Pneumatics matchLoader(3, false); //A

pros::adi::Pneumatics doublePark(1, false); //Left Arrow

pros::adi::Pneumatics lowGoal(2, false); //B


pros::Controller subscribe(pros::E_CONTROLLER_MASTER);





/**
 * A callback function for LLEMU's center button.
 *
 * When this callback is fired, it will toggle line 2 of the LCD text between
 * "I was pressed!" and nothing.
 */
void on_center_button() {
	static bool pressed = false;
	pressed = !pressed;
	if (pressed) {
		pros::lcd::set_text(2, "I was pressed!");
	} else {
		pros::lcd::clear_line(2);
	}

	//pros::Task Lift([]{
		//while(true){
//liftThing1.Move(0.5 * (target - liftThing1.GetEncoders()));
			//liftThing2.Move(0.5 * (target - liftThing1.GetEncoders()));
			//pros::delay(100);
		//}
	//});
}

/**
 * Runs initialization code. This occurs as soon as the program is started.
 *
 * All other competition modes are blocked by initialize; it is recommended
 * to keep execution time for this mode under a few seconds.
 */
void initialize() {
	robos::Selector::init();
	Drive.Calibrate();
	
	//Drive.Lateral_Set_Constants(10, 0, 5, 20, 1, 200,10);
	Drive.Lateral_Set_Constants(16, 0, 25, 20, 1, 200,10);
	//Drive.Angular_Set_Constants(8, 0.0001, 19, 20, 1, 200,10);

	//color sort setup
	//Intake.ColorSortOn(true);
	//Intake.SetColor(robos::Red);

//	pros::Task Lift([]{
	//	while(true){
		//	liftThing1.Move(0.5 * (target - liftThing1.GetEncoders()));
		//	liftThing2.Move(0.5 * (target - liftThing1.GetEncoders()));
		//	pros::delay(100);
	//	}
//	});
}

/**
 * Runs while the robot is in the disabled state of Field Management System or
 * the VEX Competition Switch, following either autonomous or opcontrol. When
 * the robot is enabled, this task will exit.
 */
void disabled() {
	doublePark.extend();
}

/**
 * Runs after initialize(), and before autonomous when connected to the Field
 * Management System or the VEX Competition Switch. This is intended for
 * competition-specific initialization routines, such as an autonomous selector
 * on the LCD.
 *
 * This task will exit when the robot is enabled and autonomous or opcontrol
 * starts.
 */
void competition_initialize() {}



/**
 * Runs the user autonomous code. This function will be started in its own task
 * with the default priority and stack size whenever the robot is enabled via
 * the Field Management System or the VEX Competition Switch in the autonomous
 * mode. Alternatively, this function may be called in initialize or opcontrol
 * for non-competition testing purposes.
 *
 * If the robot is disabled or communications is lost, the autonomous task
 * will be stopped. Re-enabling the robot will restart the task, not re-start it
 * from where it left off.
 */
void autonomous() {

	Drive.Auto();

	//Empty matchload
	Drive.Move(31);
	//Drive.TurnTo(-90, 70);
	//pros::delay(100);
	//Drive.Move(-5);
	//unloader.toggle();
	//pros::delay(400);
	
	//Drive.TurnTo(139, 55);
	//pros::delay(100);
	//Intake.ON();
	//Drive.Move(31);
	//target = pos1;
	//liftPosition = 1;
	//Intake.OFF();
	//Drive.Move(11, 127, false);
	//pros::delay(400);
	//Intake.Move(-80);
	//auton end */
	
}

/**
 * Runs the operator control code. This function will be started in its own task
 * with the default priority and stack size whenever the robot is enabled via
 * the Field Management System or the VEX Competition Switch in the operator
 * control mode.
 *
 * If no competition control is connected, this function will run immediately
 * following initialize().
 *
 * If the robot is disabled or communications is lost, the
 * operator control task will be stopped. Re-enabling the robot will restart the
 * task, not resume it from where it left off.
 */
void opcontrol() {

	Drive.SetCurves(2, 40);

	while (true) {
		Drive.Op(robos::SPLIT_ARCADE);

		if(subscribe.get_digital(pros::E_CONTROLLER_DIGITAL_L1)){
		//	Intake.ON();
			top.Move(127);
			bottom.Move(127);
		//Intake.PrivateVoltage(127, 0);
		}

		else if(subscribe.get_digital(pros::E_CONTROLLER_DIGITAL_L2)){
			top.Move(127);
		}

		else if (subscribe.get_digital(pros::E_CONTROLLER_DIGITAL_R1)){
			bottom.Move(127);
		}

		else if (subscribe.get_digital(pros::E_CONTROLLER_DIGITAL_R2)){
			bottom.Move(-127);
		}

		
		//}else if(subscribe.get_digital(pros::E_CONTROLLER_DIGITAL_L2)){
			//if(liftPosition == 0 || liftPosition == 1){
				//Intake.Move(-90);
			//}else{
				//Intake.REVERSED();
		//}
		//}
		else{
		bottom.Move(0);
		top.Move(0);
		}

		//if (subscribe.get_digital_new_press(pros::E_CONTROLLER_DIGITAL_R1)) {
		    //if(liftPosition == 0 or liftPosition == 3){
               // target = pos1;
				//liftPosition = 1;
			//}else if(liftPosition == 1){
			//	target = pos2;
				// liftPosition = 2;
			//}
		//}
		////if (subscribe.get_digital_new_press(pros::E_CONTROLLER_DIGITAL_R2)) {
		    //if(liftPosition == 2){
             //   target = pos1;
			//	liftPosition = 1;
		//	}else if(liftPosition == 1 or liftPosition == 3){
		//		target = 0;
		//		liftPosition = 0;
		//	}
		//}
		//if (subscribe.get_digital_new_press(pros::E_CONTROLLER_DIGITAL_UP)){
		//	target = 150;
		//	liftPosition = 3;
	//	}

		if(subscribe.get_digital_new_press(pros::E_CONTROLLER_DIGITAL_LEFT)){
			doublePark.toggle();
		}
		if(subscribe.get_digital_new_press(pros::E_CONTROLLER_DIGITAL_A)){
		   matchLoader.toggle();
		}
		if(subscribe.get_digital_new_press(pros::E_CONTROLLER_DIGITAL_A)){
			lowGoal.toggle();
		}

		pros::delay(20);                               // Run for 20 ms then update
	}
}
